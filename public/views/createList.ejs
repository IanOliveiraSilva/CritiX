<%- include('partials/header', {pageTitle: 'Critix - Movie Search'}) %>

<link rel="stylesheet" href="../css/createAndUpdate.css">

<main>
  <div class="container background-container">

    <form class="review-form bg-warning text-black" id="create-list-form">
      <h1 class="text-black">Crie a sua lista</h1><br>
      <label for="name">Nome da Sua Lista de Filmes:</label>
      <input type="text" id="name" name="name" required><br><br>

      <label for="description">Adicione uma Descrição para a Lista:</label>
      <textarea id="description" name="description" rows="4" cols="50"></textarea><br><br>

      <label for="movieTitles">Títulos dos Filmes (separados por vírgula):</label>
      <input type="text" id="movieTitles" name="movieTitles" required><br><br>

      <label for="isPublic">Deseja que os outros vejam sua lista?</label><br>
      <input type="checkbox" id="isPublic" name="isPublic" checked><br><br>

      <button class="submit-button btn-primary text-warning" type="submit">Criar Lista</button>
      <a href="/" class="back-link">Voltar para a página inicial</a>
    </form>
  </div>
</main>

<%- include('partials/footer') %>

<script src="../js/createList.js"></script>
