<%- include('partials/header', {pageTitle: 'Critix - Movie Search'}) %>

<link rel="stylesheet" href="../css/createAndUpdate.css">

<main>
  <div class="container background-container">

    <form class="review-form bg-warning text-dark" id="create-list-form">
      <h1 class="text-dark">Criar Lista</h1>
      <label for="name">Nome da Lista:</label>
      <input type="text" id="name" name="name" required><br><br>

      <label for="description">Descrição:</label>
      <textarea id="description" name="description" rows="4" cols="50"></textarea><br><br>

      <label for="movieTitles">Títulos dos Filmes (separados por vírgula):</label>
      <input type="text" id="movieTitles" name="movieTitles" required><br><br>

      <label for="isPublic">Público:</label>
      <input type="checkbox" id="isPublic" name="isPublic"><br><br>

      <button class="submit-button bg-dark text-warning" type="submit">Criar Lista</button>
      <a href="/" class="back-link">Voltar para a página inicial</a>
    </form>
  </div>
</main>

<%- include('partials/footer') %>

<script src="../js/createList.js"></script>
